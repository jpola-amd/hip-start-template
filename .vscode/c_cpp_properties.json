{
    "env": {
        "myDefaultIncludePath": ["${workspaceFolder}/**", "${workspaceFolder}/include"],
        "hipIncludePath": ["C:/hip/include"],
        "myCompilerPath": "C:/hip/bin"
      },
      "configurations": [
        {
          "name": "HIP Compiler",
          "intelliSenseMode": "clang-x64",
          "includePath": ["${myDefaultIncludePath}", "${hipIncludePath}"],
          // "compileCommands": "C:/hip/bin/hipcc.bat",
        //   "defines": ["FOO", "BAR=100"],
        //   "forcedInclude": ["${workspaceFolder}/include/config.h"],
          "compilerPath": "C:/hip/bin/hipcc.bat",
          "cStandard": "c11",
          "cppStandard": "c++17",
        //   "compileCommands": "/path/to/compile_commands.json",
          "browse": {
            "path": ["${workspaceFolder}"],
            "limitSymbolsToIncludedHeaders": true,
            "databaseFilename": ""
          }
        }
      ],
      "version": 4
}